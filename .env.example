# Application
ENVIRONMENT="development"
PROJECT_NAME="Backend Starter API"
SECRET_KEY="replace-with-strong-secret"
REFRESH_TOKEN_SECRET="replace-with-strong-secret"
JWT_ISSUER="backend-starter-api"
JWT_AUDIENCE="backend-starter-api"
CLOCK_SKEW_SECONDS=30
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
AUTH_LOGIN_RATE_LIMIT="5/minute"
AUTH_REFRESH_RATE_LIMIT="10/minute"

# Redis (rate limiting + caching)
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=30

# CORS - JSON array of allowed origins
# For development, common ports for React/Next.js (3000) and Vite (5173)
# For production, replace with your actual frontend domain(s)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
SQLALCHEMY_DATABASE_URI="postgresql+psycopg2://postgres:postgres@db:5433/app"
